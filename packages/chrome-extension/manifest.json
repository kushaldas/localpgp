{
  "manifest_version": 3,
  "name": "LocalPGP",
  "version": "0.1.0",
  "description": "OpenPGP operations using your local GnuPG installation",
  "permissions": [
    "storage",
    "nativeMessaging",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LocalPGP"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://127.0.0.1/*",
      "https://localhost/*",
      "https://127.0.0.1/*",
      "https://*/*",
      "http://*/*"
    ]
  }
}
